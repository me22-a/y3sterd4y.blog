---

import BaseLayout from "@layout/BaseLayout.astro";

import FormattedDate from "@common/FormattedDate.astro";


import { getCollection } from "astro:content";

const blogs = (await getCollection("blog")).sort(
  (b, a) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<BaseLayout>
    <ul>
        {
          blogs.map((blog) => (
            <li class="py-10">
              <a href={`/blog/${blog.slug}/`}>
                <img class="rounded-xl" width={520} height={360} src={blog.data.heroImage} alt="" />
                <h4 class="mt-5 font-[Inter] font-bold">{blog.data.title}</h4>
                <p class="date">
                  <FormattedDate date={blog.data.pubDate} />
                </p>
              </a>
            </li>
          ))
        }
      </ul>
</BaseLayout>
